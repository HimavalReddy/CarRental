@model IEnumerable<CarRental.Entity.Car>

@{
    ViewBag.Title = "CarView";
    int index = 1;
}
<!-- Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="CarBuyModal@(index)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">@item.Model</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <label>Rental Charges : </label><span>@item.RentalCharge </span>
                    </div>
                    <div class="col-sm-12">
                        <label>SecurityDeposit : </label><span>@item.Category.SecurityDeposit </span>
                    </div>
                    <div class="col-sm-12">
                        <strong>Total Payment : <span>@(item.Category.SecurityDeposit + item.RentalCharge)</span></strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="Payment(@item,@ViewBag.SearchObj)" >Pay</button>
                </div>
            </div>
        </div>
    </div>
        index++;
}
@{index = 1;}
<br />
<table class="table">
    <tr>
        <th>
            S.No
        </th>
        <th>
            Model Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalCharge)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @index
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalCharge)
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CarBuyModal@(index)">Buy</button>
            </td>
        </tr>
        index++;
    }

</table>
<script src="~/Scripts/MyScript/Car.js"></script>